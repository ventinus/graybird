        span class="icon-bar"
        span class="icon-bar"
        span class="icon-bar"
      a.navbar-brand href=admin_root_path Graybird Properties

    - if administrator_signed_in?
      #admin-nav-collapse.collapse.navbar-collapse
        ul.nav.navbar-nav.navbar-left
          li= link_to 'Neighborhoods', admin_neighborhoods_path
